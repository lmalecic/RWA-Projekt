@model WebApp.Models.ReservationCreateViewModel

@{
    ViewData["Title"] = "Create Reservation";
}
<h2>Create New Reservation for @Model.User.Username</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.UserId" />
            <input type="hidden" asp-for="@Model.User.Id" />
            <input type="hidden" asp-for="@Model.User.Username" />

            <div class="form-group mb-3">
                <label asp-for="@Model.BookId" class="control-label"></label>
                <select asp-for="@Model.BookId" class="form-select"
                        asp-items="@(new SelectList(Model.AvailableBooks, "Id", "Name"))">
                    <option value="">-- Select Book --</option>
                </select>
                <span asp-validation-for="@Model.BookId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.Date" class="control-label"></label>
                <input asp-for="@Model.Date" class="form-control" type="date" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>