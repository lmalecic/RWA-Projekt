@model WebApp.Models.ReservationEditViewModel

@{
    ViewData["Title"] = "Edit Reservation";
}

<h2>Edit @Model.User.Username's Reservation for @Model.Book.Name</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Reservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.UserId" />
            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" asp-for="@Model.User.Id" />
            <input type="hidden" asp-for="@Model.User.Username" />
            <input type="hidden" asp-for="@Model.Book.Id" />
            <input type="hidden" asp-for="@Model.Book.Name" />

            <div class="form-group mb-3">
                <label asp-for="@Model.Status" class="control-label"></label>
                <select asp-for="@Model.Status" class="form-select">
                    <option value="0">Active</option>
                    <option value="1">Completed</option>
                    <option value="2">Cancelled</option>
                </select>
                <span asp-validation-for="@Model.Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.Date" class="control-label"></label>
                <input asp-for="@Model.Date" class="form-control" type="date" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>