@model IEnumerable<WebApp.ViewModels.BookViewModel>

@{
	ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Isbn)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Author)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Id)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Isbn)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Author)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Description)
			</td>
			<td>
				<form asp-action="Details" asp-route-id="@item.Id" method="get">
					<button type="submit" class="btn btn-primary">Details</button>
				</form>
			</td>
			<td>
				<form asp-action="Edit" asp-route-id="@item.Id" method="get">
					<button type="submit" class="btn btn-secondary">Edit</button>
				</form>
			</td>
			<td>
				<form asp-action="Delete" asp-route-id="@item.Id" method="get">
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
		</tr>
}
	</tbody>
</table>
