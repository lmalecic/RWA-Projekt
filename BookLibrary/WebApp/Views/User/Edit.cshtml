@model WebApp.Models.UserDetailsViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="User" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.User.Id" />
            
            <div class="form-group mb-2">
                <label asp-for="@Model.User.Username" class="control-label"></label>
                <input asp-for="@Model.User.Username" class="form-control" />
                <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="@Model.User.Email" class="control-label"></label>
                <input asp-for="@Model.User.Email" class="form-control" />
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.User.FirstName" class="control-label"></label>
                <input asp-for="@Model.User.FirstName" class="form-control" />
                <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.User.LastName" class="control-label"></label>
                <input asp-for="@Model.User.LastName" class="form-control" />
                <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.User.Phone" class="control-label"></label>
                <input asp-for="@Model.User.Phone" class="form-control" />
                <span asp-validation-for="@Model.User.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a asp-action="Users" asp-controller="Admin" class="btn btn-secondary">Return</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="d-flex justify-content-between align-items-center">
            <h3>Reservations</h3>
            <a asp-controller="Reservation" asp-action="Create" asp-route-userId="@Model.User.Id" class="btn btn-primary btn-sm">
                <i class="bi bi-plus"></i> Create Reservation
            </a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>@Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().Date)</th>
                    <th>@Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().Status)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Reservations?.Any() == true)
                {
                    @foreach (var reservation in Model.Reservations)
                    {
                        <tr>
                            <td>
                                @if (reservation.Book != null)
                                {
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@reservation.Book.Id">
                                        @reservation.Book.Name
                                    </a>
                                }
                            </td>
                            <td>@reservation.Date?.ToShortDateString()</td>
                            <td>@reservation.Status</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-controller="Reservation" asp-action="Edit" 
                                       asp-route-id="@reservation.Id"
                                       class="btn btn-secondary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Reservation" asp-action="Delete" 
                                       asp-route-id="@reservation.Id"
                                       asp-route-userId="@Model.User.Id"
                                       class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="4" class="text-center">No reservations found</td></tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h3>Reviews</h3>
            <a asp-controller="Review" asp-action="Create" asp-route-userId="@Model.User.Id" class="btn btn-primary btn-sm">
                <i class="bi bi-plus"></i> Create Review
            </a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>@Html.DisplayNameFor(m => m.Reviews.FirstOrDefault().Text)</th>
                    <th>@Html.DisplayNameFor(m => m.Reviews.FirstOrDefault().Rating)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Reviews?.Any() == true)
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <tr>
                            <td>
                                @if (review.Book != null)
                                {
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@review.Book.Id">
                                        @review.Book.Name
                                    </a>
                                }
                            </td>
                            <td>@review.Text</td>
                            <td>@review.Rating</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-controller="Review" asp-action="Edit"
                                       asp-route-id="@review.Id"
                                       class="btn btn-secondary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Review" asp-action="Delete"
                                       asp-route-id="@review.Id"
                                       asp-route-userId="@Model.User.Id"
                                       class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="4" class="text-center">No reviews found</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}