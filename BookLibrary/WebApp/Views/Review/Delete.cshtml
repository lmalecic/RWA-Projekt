@model WebApp.Models.ReviewEditViewModel

@{
    ViewData["Title"] = "Delete Review";
}

<h2>Delete @Model.User.Username's Review for @Model.Book.Name</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this review for @Model.Book.Name?</h4>
</div>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Book</dt>
            <dd class="col-sm-9">@Model.Book.Name</dd>

            <dt class="col-sm-3">Rating</dt>
            <dd class="col-sm-9">@Model.Rating</dd>

            <dt class="col-sm-3">Comment</dt>
            <dd class="col-sm-9">@Model.Text</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.UserId" />
            <input type="hidden" asp-for="@Model.User.Id" />
            <input type="hidden" asp-for="@Model.User.Username" />
            <input type="hidden" asp-for="@Model.Book.Id" />
            <input type="hidden" asp-for="@Model.Book.Name" />

            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>